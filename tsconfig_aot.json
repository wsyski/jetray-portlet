{
  "compilerOptions": {
    "outDir": "ngcout",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  },
   "angularCompilerOptions": {
   "genDir": "aot",
   "skipMetadataEmit" : true
  },
  "files": [
    "src/app/app.module.ts",
    "src/app/main_aot.ts"
  ]
}